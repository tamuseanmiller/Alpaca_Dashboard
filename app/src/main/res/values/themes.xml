<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alpaca_Dashboard.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="themeName">dark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccentTransparent">@color/colorAccentTransparent</item>

        <item name="color_positive">@color/color_positive</item>
        <item name="color_negative">@color/color_negative</item>
        <item name="color_positive_light">@color/color_positive_light</item>
        <item name="color_negative_light">@color/color_negative_light</item>
        <item name="colorLight">@color/colorLight</item>
        <item name="colorPrimarySlightLight">@color/colorPrimarySlightLight</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="search_radius">15</item>
        <item name="search_strokeColor">@color/colorAccentTransparent</item>
        <item name="aboutLibrariesCardBackground">@color/colorPrimary</item>

        <item name="aboutLibrariesStyle">@style/CustomAboutLibrariesStyle</item>

        <item name="boxStrokeColor">@color/colorAccentTransparent</item>
        <item name="boxStrokeWidth">1dp</item>

        <!--         Status bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Alpaca_Dashboard.Light" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="themeName">light</item>
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccentTransparent">@color/colorAccentTransparent_light</item>

        <item name="color_positive">@color/color_positive_light2</item>
        <item name="color_negative">@color/color_negative_light2</item>
        <item name="color_positive_light">@color/color_positive_light_light</item>
        <item name="color_negative_light">@color/color_negative_light_light</item>
        <item name="colorLight">@color/colorLight_light</item>
        <item name="colorPrimarySlightLight">@color/colorPrimarySlightLight_light</item>
        <item name="colorControlActivated">@color/colorPrimaryLight_light</item>
        <item name="search_radius">15</item>
        <item name="search_strokeColor">@color/colorAccentTransparent_light</item>
        <!--        <item name="aboutLibrariesStyle">@style/CustomAboutLibrariesStyle</item>-->
        <item name="aboutLibrariesCardBackground">@color/colorPrimary_light</item>


        <item name="boxStrokeColor">@color/colorAccentTransparent_light</item>
        <item name="boxStrokeWidth">1dp</item>

        <!--         Status bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary_light</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomAboutLibrariesStyle" parent="">
        <!-- AboutLibraries specific values -->
        <item name="aboutLibrariesCardBackground">?attr/colorPrimary</item>
        <!--        <item name="aboutLibrariesDescriptionTitle">?attr/colorAccentLight</item>-->
        <item name="aboutLibrariesDescriptionText">?android:textColorSecondary</item>
        <item name="aboutLibrariesDescriptionDivider">?attr/colorAccentTransparent</item>
        <item name="aboutLibrariesOpenSourceTitle">?android:textColorPrimary</item>
        <item name="aboutLibrariesOpenSourceText">?android:textColorSecondary</item>
        <item name="aboutLibrariesSpecialButtonText">?android:textColorPrimary</item>
        <!--        <item name="aboutLibrariesOpenSourceDivider">@color/opensource_divider</item>-->
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorAccentTransparent</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="DialogThemePositive" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">?attr/color_positive</item>
        <!--        <item name="colorSurface">?attr/colorLight</item>-->
        <!--        <item name="colorOnSurface">?attr/colorLight</item>-->
    </style>

    <style name="DialogThemeNegative" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">?attr/color_negative</item>
        <!--        <item name="colorSurface">?attr/color_positive</item>-->
        <!--        <item name="colorOnSurface">?attr/colorLight</item>-->
    </style>

    <style name="Theme.Alpaca_Dashboard.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Alpaca_Dashboard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Alpaca_Dashboard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashScreenTheme" parent="Theme.Alpaca_Dashboard.Light">

        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>
</resources>